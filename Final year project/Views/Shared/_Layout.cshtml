<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Quiz App</title>
    @RenderSection("scripts", required: false);
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom Styles */
        body {
            padding-top: 4.5rem;
        }

        .navbar-brand {
            font-size: 1.25rem;
            font-weight: bold;
        }

        .navbar-nav .nav-link {
            padding-right: 1rem;
            padding-left: 1rem;
        }

        .footer {
            padding-top: 2rem;
            text-align: center;
        }

        .login-links {
            text-align: center;
            margin-top: 2rem;
        }

            .login-links a {
                margin-right: 10px;
            }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <div class="container">
          @*  <a class="navbar-brand" href="#">Quiz App</a>*@
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                    aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarCollapse">
                <ul class="navbar-nav">
                    <!-- Removed Teacher Login from the navbar -->
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        @RenderBody()
    </div>

    <div class="login-links">
        <a href="~/Home/slogin" class="btn btn-primary">Student Login</a>
        <a href="~/Home/tlogin" class="btn btn-secondary">Teacher Login</a>
    </div>
    <hr />
    <footer class="footer bg-dark text-white py-3">
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Quiz App</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
